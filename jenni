pipeline {
    agent any

    stages {
        stage('clone') {
            steps {
                git branch: 'main', credentialsId: 'amazon_automation', url: 'https://github.com/amrithagk/HPE-CCBD-Summer-Project.git'
            }
        }

        stage('Build') {
            steps {
                echo "BUILDING.."
                dir("Automate add to cart") 
                  {   sh 'echo $PATH'
                    sh 'pip install -r "Automate add to cart/steps/requirements.txt"''
                    sh 'python3 steps/login.py'
                    sh 'python3 steps/product_search.py'
                    sh 'python3 steps/reviews.py'
}
}
}
}
}

