pipeline {

    agent any 

    environment {
        ALLURE_SERVER_PID = ''
    }
        
    stages {

        stage("CLONE") {
            steps {
                git branch: 'main',  credentialsId: 'GHcreds', url: 'https://github.com/amrithagk/HPE-CCBD-Summer-Project.git'

            }
        }

        stage("BUILD") {
            steps {
                echo "Executing BUILD stage"
                echo "Running Build ${env.BUILD_ID} on ${env.JENKINS_URL}"
                echo "BUILD complete."
            }
        }

        stage("TEST") {
            steps {
                
                echo "Starting TEST stage"

                dir('Automate add to cart') {
                    bat 'behave -f allure_behave.formatter:AllureFormatter -o reports6'
                }

                echo "TEST complete."
                echo "Opening Allure Report"

                dir('Automate add to cart') {
                    script {
                        ALLURE_SERVER_PID = bat(returnStdout: true, script: 'start /B cmd /c "allure serve reports6 & echo %ERRORLEVEL%"').trim()
                    }
                }
                echo "Process ID of allure server: ${ALLURE_SERVER_ID}"
                sleep time: 120, unit: 'SECONDS'
                bat "taskkill /PID ${ALLURE_SERVER_PID}"
            }
        }

        stage("DEPLOY") {
            steps {
                echo "Initiating Deployment..."
                echo "Deployment complete."
            }
        }
    }
    
}