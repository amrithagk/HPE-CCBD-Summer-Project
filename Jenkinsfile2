pipeline {

    agent any 
        
    stages {

        stage("CLONE") {
            steps {
                git branch: 'main',  credentialsId: 'GHcreds', url: 'https://github.com/amrithagk/HPE-CCBD-Summer-Project.git'

            }
        }

        stage("BUILD") {
            steps {
                echo "Executing BUILD stage"
                echo "Running Build ${env.BUILD_ID} on ${env.JENKINS_URL}"
                echo "BUILD complete."
            }
        }

        stage("TEST") {
            steps {
                echo "Starting TEST stage"
                // bat '''pip install -r requirements.txt
                // behave -f allure_behave.formatter:AllureFormatter -o /reports6 amazon_addtocart.feature
                // '''
                // bat 'allure serve /reports6'
                dir('Automate add to cart') {
                    // Execute 'behave' command to run the feature file and generate the Allure report
                    bat 'behave -f allure_behave.formatter:AllureFormatter -o reports6'
                }
                bat 'mv reports6 "Automate add to cart/"'
                echo "TEST complete."
                echo "Opening Allure Report"
                dir('Automate add to cart') {
                    bat 'allure serve reports6'
                }
            }
        }

        stage("DEPLOY") {
            steps {
                echo "Initiating Deployment..."
                echo "Deployment complete."
            }
        }
    }
    
}